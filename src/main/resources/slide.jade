-@ var slideTitle: String
!!! 5
html(lang="jp")
    head
        meta(charset="utf-8")
        title = slideTitle
        link(rel='stylesheet' href='reveal/css/theme/night.css')
        link(rel='stylesheet' href='reveal/css/reveal.min.css')
        :javascript
            if (window.location.search.match(/print-pdf/gi)) {
                var link = document.createElement('link')
                link.rel = 'stylesheet'
                link.type = 'text/css'
                link.href = 'reveal/css/print/pdf.css'
                document.getElementsByTagName('head')[0].appendChild(link)
            }
        /[if lt IE 9]
            script(src='reveal/lib/js/html5shiv.js')

    body
        .reveal
            .slides
                - include("contents.jade")

        script(src='reveal/lib/js/head.min.js')
        script(src='reveal/js/reveal.min.js')
        :javascript
            Reveal.initialize({
                controls: true,
                progress: true,
                slideNumber: true,
                history: true,
                keyboard: true,
                overview: true,
                center: true,
                previewLinks: true,
            })
